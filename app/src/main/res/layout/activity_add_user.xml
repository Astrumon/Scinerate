<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="userViewModel"
            type="com.kpi.scineticle.viewmodel.UserViewModel" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.AddEditUserActivity">

    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        android:text="@={userViewModel.name}"
        android:inputType="text"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edit_text_phone"
        android:text="@={userViewModel.phone}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/phone_380"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/edit_text_mail"
        android:text="@={userViewModel.email}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/e_mail"
        android:inputType="text"
        tools:ignore="MissingConstraints" />



</LinearLayout>
</layout>
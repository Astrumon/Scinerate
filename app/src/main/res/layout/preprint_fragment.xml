<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="preprintViewModel"
            type="com.kpi.scineticle.viewmodel.subsystemUser.existingUser.PreprintViewModel" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".view.fragments.PreprintFragment">

            <EditText
                android:id="@+id/preprint_authors"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/authors"
                android:inputType="text"
                android:text="@={preprintViewModel.authors}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/preprint_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/name_of_work"
                android:inputType="text"
                android:text="@={preprintViewModel.name}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/preprint_city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/city"
                android:inputType="text"
                android:text="@={preprintViewModel.city}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/preprint_place"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/place"
                android:inputType="text"
                android:text="@={preprintViewModel.place}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/preprint_year"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/year"
                android:inputType="text"
                android:text="@={preprintViewModel.year}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/preprint_sheet"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/sheets"
                android:inputType="text"
                android:text="@={preprintViewModel.sheet}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/preprint_org"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/name_of_org"
                android:inputType="text"
                android:text="@={preprintViewModel.organisation}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/preprint_abbreviation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/abbreviation"
                android:inputType="text"
                android:text="@={preprintViewModel.abbreviation}"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_preprint_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="@string/save" />

        </LinearLayout>
    </ScrollView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="user"
            type="com.kpi.scineticle.model.User" />
    </data>
    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/card_user"
    app:cardCornerRadius="@dimen/cardview_radius_corner"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:id="@+id/item_user"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_name"
        android:layout_width="wrap_content"
        >

      <!--  <de.hdodenhof.circleimageview.CircleImageView-->
        <!--  android:id="@+id/image_user"-->
        <!--  android:layout_width="@dimen/picture_profile_size"-->
        <!--   android:layout_height="@dimen/picture_profile_size"-->
        <!--   />-->
         <!-- app:imageUrl="@{userViewModel.pictureProfile" />-->


        <TextView
            android:id="@+id/label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_name"
            android:layout_marginLeft="@dimen/margin_name"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size_name"
            android:textStyle="bold"
            android:text="@{user.name}"
            android:ellipsize="end"/>

     <TextView
         android:id="@+id/label_phone"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_alignStart = "@id/label_name"
         android:layout_below="@+id/label_name"
         android:layout_toEndOf="@+id/label_name"

         android:textColor="@color/text"
         android:textSize="@dimen/text_size"
         android:textStyle="bold"

         android:layout_toRightOf="@+id/label_name"
         android:layout_alignLeft="@id/label_name"
         android:text="@{user.phoneNumber}"

         android:ellipsize="end"
         />

    <TextView
        android:id="@+id/label_mail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignStart = "@id/label_phone"
        android:layout_below="@+id/label_phone"
        android:layout_toEndOf="@+id/label_phone"

         android:textColor="@color/text"
         android:textSize="@dimen/text_size"
         android:textStyle="bold"

        android:text="@{user.mail}"
         android:layout_toRightOf="@+id/label_phone"
         android:layout_alignLeft="@id/label_phone"

        android:ellipsize="end"
        />
 </RelativeLayout>
 </androidx.cardview.widget.CardView>
 </layout>
<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="dissertetionViewModel"
            type="com.kpi.scineticle.viewmodel.subsystemUser.existingUser.DissertationViewModel" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".view.fragments.DissertationFragment">

            <EditText
                android:id="@+id/dissertation_authors"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/authors"
                android:inputType="text"
                android:text="@={dissertetionViewModel.authors}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dissertation_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/name_of_work"
                android:inputType="text"
                android:text="@={dissertetionViewModel.name}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dissertation_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/type"
                android:inputType="text"
                android:text="@={dissertetionViewModel.type}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dissertation_place"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/place"
                android:inputType="text"
                android:text="@={dissertetionViewModel.place}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dissertation_publish"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/publish"
                android:inputType="text"
                android:text="@={dissertetionViewModel.publish}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dissertation_year"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/year"
                android:inputType="text"
                android:text="@={dissertetionViewModel.year}"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dissertation_count_list"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="@string/count_list"
                android:inputType="text"
                android:text="@={dissertetionViewModel.countOfSheets}"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_dissertation_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="@string/save" />

        </LinearLayout>
    </ScrollView>
</layout>